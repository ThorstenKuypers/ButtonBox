{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "avr-gcc",
            "command": "avr-gcc.exe",
            "type": "shell",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\main.cpp",
                "-mmcu=atmega8u2",
                "-std=gnu++17",
                "-fno-fat-lto-objects",
                "-Os",
                "-Wall",
                "-ffunction-sections",
                "-fdata-sections",
                "-flto",
                "-Wno-error=narrowing",
                "-fno-exceptions",
                "-fno-threadsafe-statics",
                "-fpermissive",
                "-DF_CPU=16000000L",
                "-I",
                "C:\\msys64\\mingw32\\avr\\include",
                "-o",
                "${workspaceFolder}\\build\\usb-fw.elf"
            ],            
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // },
            "options": {
                "cwd": "C:\\msys64\\mingw32\\bin"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "objcopy",
            "type": "shell",
            "dependsOn":[
                "avr-gcc"
            ],
            "problemMatcher":"$gcc",
            "command":"avr-objcopy.exe",
            "args": [
                "-j",
                ".text",
                "-j",
                ".data",
                "-O",
                "ihex",
                "${workspaceFolder}\\build\\usb-fw.elf",
                "${workspaceFolder}\\build\\usb-fw.hex"
            ]
        },
        {
            "label": "objdump",
            "type": "shell",
            "dependsOn":["objcopy"],
            "command":"avr-objdump.exe",
            "args": [
                "-S",
                "${workspaceFolder}\\build\\usb-fw.elf",
                "${workspaceFolder}\\build\\usb-fw.lst"
            ]
        },
        {
            "label": "size",
            "type": "shell",
            "command":"avr-size.exe",
            "dependsOn":"avr-gcc",
            "args": [
                "-C",
                "--mcu=atmega8u2",
                "${workspaceFolder}\\build\\usb-fw.elf"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "dependsOn":[
                "avr-gcc",
                "objcopy",
                "objdump",
                "size"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }

    ]
}